# brew
alias arm="exec arch -arch arm64e bash --login"
alias x64="exec arch -arch x86_64 /bin/zsh --login"


# functions

## Easy git push
function gp_set(){
    git add .
    git commit -m "$1"
    git push
}



# PATH
export PATH="/bin:/usr/bin:/usr/local/bin:${PATH}"
export PATH=$PATH:/opt/homebrew/bin
export PATH=$PATH:/usr/sbin/
export PATH=/opt/homebrew/opt/make/libexec/gnubin:$PATH
export PATH=$HOME/Library/Python/3.8/bin:$PATH
export PATH=$HOME/.cargo/bin:$PATH

# alias
alias bash="/opt/homebrew/bin/bash"
#alias ls='ls -G'
#alias ll='ls -lG'
#alias la='ls -laG'
alias ..='cd ..'
alias intel="arch -x86_64" # intel brew "command"
alias rm="trash"
alias __gp=gp_set
alias __yokoenv="conda activate yokoenv"
alias __line="$HOME/workspace/yokoscripts/shell_line.sh"
alias __pokemon='$HOME/.pokemon-icat/pokemon-icat.sh "-g 5"'

## yokoscripts
yokoscripts=$HOME/workspace/yokoscripts
alias __qr="/opt/homebrew/bin/bash ${yokoscripts}/qr_make.sh"
alias __sp="source ${yokoscripts}/simple_proxy.sh set"
alias __usp="source ${yokoscripts}/simple_proxy.sh unset"



